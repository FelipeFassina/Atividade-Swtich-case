import java.util.Scanner;

public class Exercicio4 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println("Digite qual o plano de trabalho (A, B, C)");
        String plano = sc.nextLine();

        System.out.println("Digite seu salario");
        double sal = sc.nextDouble();

        double NovoSal = sal;

        switch (plano) {
            case "A":
            case"a":
                NovoSal = sal * 1.10;
                        break;
            case "B":
            case"b":
                NovoSal = sal * 1.15;
                break;
            case "C":
            case"c":
                NovoSal = sal * 1.20;
                break;
                default:
                    System.out.println("Plano de trabalho invalido, insira A, B ou C!");
                    return;
        }
        System.out.printf("Seu novo salario Ã©: %.2f", NovoSal);
    }
}
